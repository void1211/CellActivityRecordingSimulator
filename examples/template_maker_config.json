{
  "input": {
    "templates_path": "templates.npy",
    "scale_to_max_one": false
  },
  "filters": {
    "distance": {
      "max_distance": 2.0,
      "min_distance": null,
      "method": "euclidean",
      "reference_cluster": null
    },
    "amplitude": {
      "min_amplitude": 0.1,
      "max_amplitude": 10.0
    },
    "electrode": {
      "min_electrodes": 1,
      "max_electrodes": 10
    },
    "custom": {
      "conditions": []
    },
    "apply_order": ["distance", "amplitude", "electrode"]
  },
  "analysis": {
    "enabled": true,
    "save_analysis": "analysis_results.npz"
  },
  "plot": {
    "enabled": false,
    "max_clusters": 10,
    "save_plots": null
  },
  "output": {
    "save_filtered": "filtered_templates.npy",
    "verbose": true
  },
  "metadata": {
    "description": "TemplateMaker設定ファイルの例",
    "version": "1.0.0",
    "created_by": "TemplateMaker",
    "notes": "ユークリッド距離2.0以下、振幅0.1-10.0、電極数1-10の条件でフィルタリング"
  }
} 
